<section class=" well-sm">
    <div class="container ">
        <h2 class="text-center text-md-left"><span class="ubold">Contact</span> form</h2>
        <%= simple_form_for @contact, :url => contacts_path  do |f| %>
        <div class="row">
                      <div class="col-md-6">
                        <%= f.input :name, class: "form-control" %>

                      </div>


                                  <div class="col-md-6">
                                    <%= f.input :email, class: "form-control" %>

                                  </div>
                                </div>
                                <div class="row">
                                              <div class="col-md-12">
                                                <%= f.input :message, class: "form-control", as: :text, :input_html => {:rows => 10, :col => 20}  %>

                                              </div>
                                            </div>
                                            <div class="mfControls">

																														<%= f.submit :submit, class: "btn btn-primary" %>
                                                          </div>

        <% end %>
</div>
</section>
